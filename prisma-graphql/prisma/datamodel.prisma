type User {
  id: ID! @id
  name: String!
  posts: [Post!]!
  email: String! @unique
}

type Post {
  id: ID! @id
  title: String!
  body: String!
  published: Boolean!
  author: User!
}

  type Comment {
    id: ID! @id
    text: String!
    author: User!
    post: Post!
  }

